<%- include('partials/header') %>

<h2>Editar País</h2>

<% if (typeof errores !== 'undefined') { %>
  <ul style="color:red;">
    <% errores.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/paises/editar/<%= pais._id %>" method="POST">
  <label>Nombre Oficial (español): <input name="name.spa.official" value="<%= pais.name.spa.official %>" required></label><br>
  <label>Capital: <input name="capital" value="<%= pais.capital.join(', ') %>" required></label><br>
  <label>Fronteras: <input name="borders" value="<%= pais.borders.join(', ') %>" required></label><br>
  <label>Área: <input name="area" type="number" value="<%= pais.area %>" required></label><br>
  <label>Población: <input name="population" type="number" value="<%= pais.population %>" required></label><br>
  <label>Gini: <input name="gini" type="number" step="0.01" value="<%= pais.gini || '' %>"></label><br>
  <label>Zonas horarias: <input name="timezones" value="<%= pais.timezones.join(', ') %>"></label><br>
  <button type="submit">Actualizar</button>
</form>

<%- include('partials/footer') %>
